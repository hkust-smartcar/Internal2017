<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_airship_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leechunhei.airship_remote.airshipControl">

    <Button
        android:text="Clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motor1_clockwise"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/motor1_anticlockwise"
        android:layout_alignEnd="@+id/motor1_anticlockwise" />

    <Button
        android:text="ANTI-CLOCKWISE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motor1_anticlockwise"
        android:layout_below="@+id/motor1_clockwise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motor2_clockwise"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/motor1_clockwise"
        android:layout_alignRight="@+id/motor2_anticlockwise"
        android:layout_alignEnd="@+id/motor2_anticlockwise" />

    <Button
        android:text="anti-clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motor2_anticlockwise"
        android:layout_alignBaseline="@+id/motor1_anticlockwise"
        android:layout_alignBottom="@+id/motor1_anticlockwise"
        android:layout_toRightOf="@+id/motor1_clockwise"
        android:layout_toEndOf="@+id/motor1_clockwise" />

    <Button
        android:text="CLOCKWISE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motor3_clockwise"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/motor2_clockwise"
        android:layout_alignRight="@+id/motor3_anticlockwise"
        android:layout_alignEnd="@+id/motor3_anticlockwise" />

    <Button
        android:text="ANTI-CLOCKWISE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motor3_anticlockwise"
        android:layout_below="@+id/motor3_clockwise"
        android:layout_toRightOf="@+id/motor2_anticlockwise"
        android:layout_toEndOf="@+id/motor2_anticlockwise" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/motor1"
        android:max="450"
        android:progress="225" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/direction"
        android:layout_below="@+id/motor1"
        android:layout_alignLeft="@+id/motor1"
        android:layout_alignStart="@+id/motor1"
        android:max="450"
        android:progress="225" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/motor3"
        android:layout_below="@+id/direction"
        android:layout_alignLeft="@+id/direction"
        android:layout_alignStart="@+id/direction"
        android:max="450"
        android:progress="225" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motor1_anticlockwise"
        android:layout_toLeftOf="@+id/motor2_anticlockwise"
        android:layout_toStartOf="@+id/motor2_anticlockwise"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/motor1_speed" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motor2_anticlockwise"
        android:layout_toLeftOf="@+id/motor3_anticlockwise"
        android:layout_toStartOf="@+id/motor3_anticlockwise"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/motor2_speed" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motor3_anticlockwise"
        android:layout_alignRight="@+id/motor3_anticlockwise"
        android:layout_alignEnd="@+id/motor3_anticlockwise"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:id="@+id/motor3_speed" />

    <Button
        android:text="disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/disconnect"
        android:layout_alignBaseline="@+id/motor3_anticlockwise"
        android:layout_alignBottom="@+id/motor3_anticlockwise"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disconnect"
        android:layout_alignLeft="@+id/disconnect"
        android:layout_alignStart="@+id/disconnect"
        android:id="@+id/remote" />
</RelativeLayout>
